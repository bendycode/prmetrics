<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <div class="repository-filter">
        <%= form_with url: dashboard_path, method: :get, local: true, class: "form-inline" do |f| %>
            <%= select_tag :repository_id, 
                options_for_select(
                    [["All Repositories", ""]] + @repositories.map { |r| [r.name, r.id] },
                    @selected_repository_id
                ),
                class: "form-control form-control-sm",
                onchange: "this.form.submit();" %>
        <% end %>
    </div>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Repositories Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <%= link_to repositories_path, class: "text-decoration-none" do %>
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Repositories</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_repositories %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-code-branch fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <!-- Pull Requests Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Pull Requests</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_prs %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-code-merge fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Time to Review Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Avg Time to Review (Hours)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @avg_time_to_review %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Time to Merge Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Avg Time to Merge (Hours)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @avg_time_to_merge %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- Enhanced PR Velocity Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">PR Velocity Trends</h6>
                <small class="text-muted">
                    Last 12 weeks 
                    <% if @selected_repository_id.present? %>
                        for <%= Repository.find(@selected_repository_id).name %>
                    <% else %>
                        across all repositories
                    <% end %>
                </small>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="prVelocityChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Review Performance Chart -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Review Performance</h6>
                <small class="text-muted">
                    Average hours (weekdays only)
                    <% if @selected_repository_id.present? %>
                        <br><%= Repository.find(@selected_repository_id).name %>
                    <% end %>
                </small>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="reviewPerformanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Repository Comparison Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Repository Performance Comparison</h6>
                <small class="text-muted">Last 4 weeks average</small>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="repositoryComparisonChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Recent Repositories -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Repositories</h6>
            </div>
            <div class="card-body">
                <% @repositories.each do |repo| %>
                    <div class="d-flex align-items-center mb-3">
                        <div class="mr-3">
                            <div class="icon-circle bg-primary">
                                <i class="fas fa-code-branch text-white"></i>
                            </div>
                        </div>
                        <div class="font-weight-bold">
                            <%= link_to repo.name, repository_path(repo), class: "text-decoration-none" %>
                            <div class="small text-gray-500">
                                Last sync: <%= repo.last_fetched_at&.strftime("%b %d, %Y") || "Never" %>
                            </div>
                        </div>
                    </div>
                <% end %>
                
                <% if @repositories.empty? %>
                    <div class="text-center py-4">
                        <i class="fas fa-code-branch fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No repositories configured yet.</p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <!-- Recent Week Activity -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Week Activity</h6>
            </div>
            <div class="card-body">
                <% @latest_weeks.each do |week| %>
                    <div class="d-flex align-items-center mb-3">
                        <div class="mr-3">
                            <div class="icon-circle bg-success">
                                <i class="fas fa-calendar text-white"></i>
                            </div>
                        </div>
                        <div class="font-weight-bold">
                            <%= link_to "Week #{week.week_number}", repository_week_path(week.repository, week), 
                                class: "text-decoration-none" %>
                            <div class="small text-gray-500">
                                <%= week.repository.name %> - <%= week.begin_date.strftime("%b %d") %> to <%= week.end_date.strftime("%b %d") %>
                            </div>
                        </div>
                    </div>
                <% end %>
                
                <% if @latest_weeks.empty? %>
                    <div class="text-center py-4">
                        <i class="fas fa-calendar fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No week data available yet.</p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

</div>

<script>
/*
 * Dashboard Color Scheme (Consistent across all charts):
 * Blue (#4e73df): PR Counts/Volume
 * Yellow (#f6c23e): Review Time
 * Green (#1cc88a): Merge Time/Success
 * Red (#e74a3b): Cancelled/Failed PRs
 * Cyan (#36b9cc): Repositories/Infrastructure
 */

// Chart Preferences Utility for localStorage persistence
const ChartPreferences = {
  STORAGE_KEY: 'prmetrics_chart_preferences',

  /**
   * Load all preferences from localStorage
   * @returns {Object} Preferences object or empty object on error
   */
  load() {
    try {
      const data = localStorage.getItem(this.STORAGE_KEY);
      return data ? JSON.parse(data) : {};
    } catch (e) {
      console.error('Failed to load chart preferences:', e);
      return {};
    }
  },

  /**
   * Save preferences for a specific chart
   * @param {string} chartId - Unique chart identifier
   * @param {Array<string>} visibleDatasets - Array of visible dataset labels
   */
  save(chartId, visibleDatasets) {
    try {
      const prefs = this.load();
      prefs[chartId] = visibleDatasets;
      localStorage.setItem(this.STORAGE_KEY, JSON.stringify(prefs));
    } catch (e) {
      console.error('Failed to save chart preferences:', e);
    }
  },

  /**
   * Apply saved preferences to a chart instance
   * @param {Chart} chart - Chart.js instance
   * @param {string} chartId - Unique chart identifier
   */
  apply(chart, chartId) {
    const prefs = this.load();
    const visibleDatasets = prefs[chartId];

    if (!visibleDatasets) return; // No saved preferences, use defaults

    // Hide/show datasets based on saved preferences
    chart.data.datasets.forEach((dataset, index) => {
      const shouldBeVisible = visibleDatasets.includes(dataset.label);
      const meta = chart.getDatasetMeta(index);
      meta.hidden = !shouldBeVisible;
    });

    chart.update();
  },

  /**
   * Create a custom legend click handler that saves preferences
   * @param {Chart} chart - Chart.js instance
   * @param {string} chartId - Unique chart identifier
   * @returns {Function} onClick handler for Chart.js legend
   */
  createLegendClickHandler(chart, chartId) {
    return function(e, legendItem) {
      // Replicate default Chart.js v2.9.4 behavior
      const index = legendItem.datasetIndex;
      const meta = chart.getDatasetMeta(index);

      // Toggle visibility
      meta.hidden = meta.hidden === null ? !chart.data.datasets[index].hidden : null;
      chart.update();

      // Save current visibility state to localStorage
      const visibleDatasets = chart.data.datasets
        .filter((dataset, i) => !chart.getDatasetMeta(i).hidden)
        .map(dataset => dataset.label);

      ChartPreferences.save(chartId, visibleDatasets);
    };
  }
};

document.addEventListener('DOMContentLoaded', function() {
    // Enhanced PR Velocity Chart
    var ctx1 = document.getElementById('prVelocityChart').getContext('2d');
    window.prVelocityChart = new Chart(ctx1, {
        type: 'line',
        data: {
            labels: [<%= @chart_weeks.map { |w| "'#{w.begin_date.strftime('%b %d')}'" }.join(', ').html_safe %>],
            datasets: [{
                label: 'PRs Started',
                data: [<%= @chart_weeks.map(&:num_prs_started).join(', ') %>],
                borderColor: '#4e73df',
                backgroundColor: 'rgba(78, 115, 223, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }, {
                label: 'PRs Merged',
                data: [<%= @chart_weeks.map(&:num_prs_merged).join(', ') %>],
                borderColor: '#1cc88a',
                backgroundColor: 'rgba(28, 200, 138, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }, {
                // Cancelled PRs styled as unfilled line to visually de-emphasize negative metric
                label: 'PRs Cancelled',
                data: [<%= @chart_weeks.map(&:num_prs_cancelled).join(', ') %>],
                borderColor: '#e74a3b',
                backgroundColor: 'rgba(231, 74, 59, 0.1)',
                borderWidth: 2,
                fill: false,
                tension: 0.3
            }, {
                // Late PRs (approved 8-27 days ago) styled in orange to indicate warning
                label: 'Late PRs',
                data: [<%= @chart_weeks.map(&:num_prs_late).join(', ') %>],
                borderColor: '#f6c23e',
                backgroundColor: 'rgba(246, 194, 62, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }, {
                // Stale PRs (approved 28+ days ago) styled in red to indicate urgency
                label: 'Stale PRs',
                data: [<%= @chart_weeks.map(&:num_prs_stale).join(', ') %>],
                borderColor: '#e74a3b',
                backgroundColor: 'rgba(231, 74, 59, 0.2)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#e3e6f0'
                    }
                },
                x: {
                    grid: {
                        color: '#e3e6f0'
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        usePointStyle: true,
                        padding: 20
                    }
                }
            }
        }
    });

    // Enable chart preferences persistence for PR Velocity Chart
    window.prVelocityChart.options.plugins.legend.onClick =
        ChartPreferences.createLegendClickHandler(window.prVelocityChart, 'prVelocityChart');
    ChartPreferences.apply(window.prVelocityChart, 'prVelocityChart');

    // Review Performance Chart
    var ctx2 = document.getElementById('reviewPerformanceChart').getContext('2d');
    window.reviewPerformanceChart = new Chart(ctx2, {
        type: 'line',
        data: {
            labels: [<%= @chart_weeks.map { |w| "'#{w.begin_date.strftime('%b %d')}'" }.join(', ').html_safe %>],
            datasets: [{
                label: 'Hours to First Review',
                data: [<%= @chart_weeks.map { |w| w.avg_hrs_to_first_review || 0 }.join(', ') %>],
                borderColor: '#f6c23e',
                backgroundColor: 'rgba(246, 194, 62, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }, {
                label: 'Hours to Merge',
                data: [<%= @chart_weeks.map { |w| w.avg_hrs_to_merge || 0 }.join(', ') %>],
                borderColor: '#1cc88a',
                backgroundColor: 'rgba(28, 200, 138, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#e3e6f0'
                    },
                    ticks: {
                        callback: function(value) {
                            return value + 'h';
                        }
                    }
                },
                x: {
                    grid: {
                        color: '#e3e6f0'
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        usePointStyle: true,
                        padding: 15
                    }
                }
            }
        }
    });

    // Enable chart preferences persistence for Review Performance Chart
    window.reviewPerformanceChart.options.plugins.legend.onClick =
        ChartPreferences.createLegendClickHandler(window.reviewPerformanceChart, 'reviewPerformanceChart');
    ChartPreferences.apply(window.reviewPerformanceChart, 'reviewPerformanceChart');

    // Repository Comparison Chart
    <% if @repository_stats.any? %>
    var ctx3 = document.getElementById('repositoryComparisonChart').getContext('2d');
    window.repositoryComparisonChart = new Chart(ctx3, {
        type: 'bar',
        data: {
            labels: [<%= @repository_stats.map { |r| "'#{r[:name]}'" }.join(', ').html_safe %>],
            datasets: [{
                label: 'Total PRs (4 weeks)',
                data: [<%= @repository_stats.map { |r| r[:total_prs] }.join(', ') %>],
                backgroundColor: '#4e73df',
                borderColor: '#4e73df',
                borderWidth: 1
            }, {
                label: 'Avg Review Time (hours)',
                data: [<%= @repository_stats.map { |r| r[:avg_review_time].round(1) }.join(', ') %>],
                backgroundColor: '#f6c23e',
                borderColor: '#f6c23e',
                borderWidth: 1,
                yAxisID: 'y1'
            }, {
                label: 'Merge Rate (%)',
                data: [<%= @repository_stats.map { |r| r[:merge_rate] }.join(', ') %>],
                backgroundColor: '#1cc88a',
                borderColor: '#1cc88a',
                borderWidth: 1,
                yAxisID: 'y2'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    beginAtZero: true,
                    grid: {
                        color: '#e3e6f0'
                    },
                    title: {
                        display: true,
                        text: 'PR Count'
                    }
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    beginAtZero: true,
                    grid: {
                        drawOnChartArea: false,
                    },
                    title: {
                        display: true,
                        text: 'Hours'
                    }
                },
                y2: {
                    type: 'linear',
                    display: false,
                    beginAtZero: true,
                    max: 100
                },
                x: {
                    grid: {
                        color: '#e3e6f0'
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        usePointStyle: true,
                        padding: 20
                    }
                }
            }
        }
    });

    // Enable chart preferences persistence for Repository Comparison Chart
    window.repositoryComparisonChart.options.plugins.legend.onClick =
        ChartPreferences.createLegendClickHandler(window.repositoryComparisonChart, 'repositoryComparisonChart');
    ChartPreferences.apply(window.repositoryComparisonChart, 'repositoryComparisonChart');
    <% end %>
});
</script>