<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Invite User</h1>
    
    <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h6><%= pluralize(@user.errors.count, "error") %> prohibited this user from being invited:</h6>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "admin@example.com" %>
        <div class="form-text">An invitation email will be sent to this address.</div>
      </div>

      <div class="mb-3">
        <fieldset>
          <legend class="form-label">User Role</legend>
          <div class="form-check">
            <%= form.check_box :admin_role_admin, { class: "form-check-input" }, "admin", "regular_user" %>
            <%= form.label :admin_role_admin, "Admin", class: "form-check-label" %>
          </div>
          <div class="form-text">
            <strong>Admin:</strong> Full access to all features including repository management, user invitations, and all data.<br>
            <strong>Regular User:</strong> Read-only access to dashboards, metrics, and reports. Cannot manage repositories or invite users.
          </div>
        </fieldset>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Send Invitation", class: "btn btn-primary" %>
        <%= link_to "Cancel", users_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>